[test_case]
test = perfrunner.tests.ycsb.YCSBN1QLThroughputTest

[cluster]
mem_quota = {{ mem_quota * 3 // 4}}
index_mem_quota = {{ mem_quota // 4 }}
initial_nodes = 1

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

{% raw %}
[n1ql]
indexes =
    primary_idx::CREATE PRIMARY INDEX {name}_{hash} ON `bucket-1` WITH {{ "nodes": [ "{index_node}:8091" ] }};
{% endraw %}

[load]
workload_path = workloads/workloade
workers = 40

[access]
workload_path = workloads/workloade
ops = 1000000000
workers = {{ workers }}
workload_instances = {{ workload_instances }}
