[test_case]
test = perfrunner.tests.n1ql.N1QLDGMLatencyTest
title = Q2, Singleton Unique Lookup, 450 queries/sec, Plasma, request_plus
component = n1ql
category = dgm

[cluster]
mem_quota = 53248
index_mem_quota = 20480
initial_nodes = 6
num_buckets = 1

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = plasma
indexes = by_email:email
restrict_kernel_memory = 32768M

[load]
items = 150000000
size = 1024
workers = 100
doc_gen = reverse_lookup

[n1ql]
indexes =
    by_email::CREATE INDEX {name} ON `{bucket}`(email);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 150000000
workers = 20
time = 3600
n1ql_queries = singleton-unique-lookup
n1ql_throughput = 450
n1ql_workers = 100

[n1ql-singleton-unique-lookup]
statement = SELECT * FROM `bucket-1` WHERE email = $1;
scan_consistency = request_plus
args = ["{email}"]
