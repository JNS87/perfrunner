[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest
title = Q13, Range Scan, MOI, not_bounded
component = n1ql
category = Q1_Q3_thr

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
items = 20000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[n1ql]
indexes =
    primary_idx::CREATE PRIMARY INDEX {name} ON `{bucket}`;

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 20000000
workers = 20
time = 1200
n1ql_queries = range-scan
n1ql_workers = 256

[n1ql-range-scan]
prepared = range_scan
statement = SELECT RAW meta().id FROM `bucket-1` WHERE meta().id >= $1 ORDER BY meta().id LIMIT 50;
scan_consistency = not_bounded
args = ["{key}"]
