[test_case]
test = perfrunner.tests.n1ql.N1QLJoinTest
title = Q8, Inner Lookup JOIN, 20M docs, GSI, MOI, request_plus
summary = Inner Lookup JOIN

[cluster]
mem_quota = 51200
index_mem_quota = 200000
initial_nodes = 6
num_buckets = 2

[secondary]
indexer.settings.storage_mode = memory_optimized
indexer.settings.compaction.min_size = 1048576
indexer.settings.persisted_snapshot.interval = 3000
indexer.settings.wal_size = 40960
indexer.settings.maxVbQueueLength = 10000
indexer.settings.max_cpu_percent = 2400
indexer.settings.scan_timeout = 0
indexer.settings.gc_percent = 200

[load]
items = 10000000
size = 1024
workers = 80

[n1ql]
indexes =
    by_email::CREATE INDEX {name} ON `{bucket}` (email) using gsi;

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 10000000
workers = 20
time = 1200
n1ql_queries = join-inner-lookup
n1ql_throughput = 1000000
n1ql_workers = 720

[n1ql-join-inner-lookup]
prepared = joined_inner_lookup
statement = SELECT u.name, t.title FROM `bucket-1` u JOIN `bucket-2` t ON KEYS u.topics WHERE u.email = $1;
scan_consistency = request_plus
args = ["{email}"]
