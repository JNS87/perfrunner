[test_case]
test = perfrunner.tests.n1ql.N1QLLatencyTest
title = MG7 1Bux100Kx1K, Key-Value Merge, 14.4KGops, 3.6KSops, 20KQops
summary = Merge, 14.4KGops, 3.6KSops, 20KQops
larger_is_better = false

[cluster]
mem_quota = 20480
index_mem_quota = 100000
initial_nodes = 6
num_buckets = 1

[bucket]
replica_number = 1
password =
eviction_policy = valueOnly

[load]
items = 100000
size = 1024
workers = 20
doc_gen = merge
doc_partitions = 1

[n1ql]
indexes =
    by_primary::CREATE PRIMARY INDEX {name} ON `{bucket}` using GSI;

[access]
creates = 0
reads = 80
updates = 20
deletes = 0
throughput = 18000
items = 100000
workers = 24
time = 1200
n1ql_queries = merge
n1ql_throughput = 1000
n1ql_workers = 40
n1ql_op = merge

[n1ql-merge]
prepared = kvmerge
statement = MERGE INTO `bucket-2` USING (SELECT `bucket-1`.* FROM `bucket-1` WHERE extramerge is not missing) AS b3 on key to_string(b3.extramerge) when not matched then insert b3;
