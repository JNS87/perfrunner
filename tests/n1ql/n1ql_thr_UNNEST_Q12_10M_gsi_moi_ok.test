[test_case]
test = perfrunner.tests.n1ql.N1QLJoinTest
title = Q12, UNNEST 100, MOI, not_bounded

[cluster]
mem_quota = 51200
index_mem_quota = 200000
initial_nodes = 6
num_buckets = 2

[secondary]
indexer.settings.storage_mode = memory_optimized
indexer.settings.compaction.min_size = 1048576
indexer.settings.persisted_snapshot.interval = 3000
indexer.settings.wal_size = 40960
indexer.settings.maxVbQueueLength = 10000
indexer.settings.max_cpu_percent = 2400
indexer.settings.scan_timeout = 0
indexer.settings.gc_percent = 200

[load]
items = 10000000
size = 1024
workers = 80
doc_gen = ext_reverse_lookup,join

[n1ql]
indexes =
    ::
    by_replies::CREATE INDEX {name} ON `{bucket}` (DISTINCT ARRAY r.`user` FOR r IN replies END);

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 15000
items = 10000000
workers = 20
time = 1200
n1ql_queries = unnest
n1ql_throughput = 1000000
n1ql_workers = 720

[n1ql-unnest]
prepared = unnest_100
statement = SELECT r.`user` FROM `bucket-2` t UNNEST t.replies AS r WHERE r.`user` = $1;
scan_consistency = not_bounded
args = ["{key}"]
