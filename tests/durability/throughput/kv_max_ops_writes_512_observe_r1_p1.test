[test_case]
test = perfrunner.tests.kv.PillowFightTest

[showfast]
title = Max ops/sec, cbc-pillowfight, 4 nodes, 1/99 R/W, 512B JSON items, 1K batch size, ReplicateTo=1, PersistTo=1
component = kv
category = max_ops
orderby = writes

[cluster]
mem_quota = 51200
initial_nodes = 4
num_buckets = 1

[bucket]
replica_number = 2

[load]
size = 512
items = 20000000
workers = 50
doc_gen = json

[access]
items = 20000000
iterations = 10000
workers = 50
updates = 99
replicate_to = 1
persist_to = 1

[clients]
libcouchbase = 3.0.0-alpha.5
python_client = 3.0.0-alpha.5