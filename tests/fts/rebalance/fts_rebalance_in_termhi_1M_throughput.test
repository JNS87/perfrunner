[test_case]
test = perfrunner.tests.fts.FTSRebalanceTestThroughput
title = Rebalance-in, 2 -> 3, KV and FTS, wiki 1M, High term, 60 workers
component = fts
category = benchmark
sub_category = Rebalance

[cluster]
mem_quota = 40960
initial_nodes = 2
num_buckets = 1

[compaction]
db_percentage = 10

[access]
time=1200

[rebalance]
nodes_after = 3
start_after = 180
stop_after = 180


[fts]
items = 1000000
name  = perf_fts_index
port = 8094
worker= 60
type = term
query_file = tests/fts/data/hi.txt
query_size = 10
logfile = /tmp/fts_thput_termhi_1M_1K.txt
orderby = q0b00000001
backup_path = /fts/backup
repo_path = fts_wiki
field = text
index_configfile = tests/fts/index/fts_tvectors_off.json