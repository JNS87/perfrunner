[test_case]
test = perfrunner.tests.fts.FTSThroughputTest

[showfast]
title = High Term, 10M docs, 500 updates/sec kv load
component = fts
category = end_user_non_dgm
sub_category = Throughput

[access]
time = 600
fts_updates_swap = 100
workers = 2
throughput = 500

[cluster]
mem_quota = 80000
initial_nodes = 2
num_buckets = 1
fts_index_mem_quota = 10000

[fts]
items = 10000000
name  = perf_fts_index
port = 8094
worker = 10
type = term
query_file = tests/fts/enduser/data/hi.txt
query_size = 10
logfile = /tmp/fts_thput_termhi_enduser.txt
orderby = q0b00000001
backup_path = /fts/backup
repo_path = fts_generic_10M
field = text
index_configfile = tests/fts/enduser/index/default.json
