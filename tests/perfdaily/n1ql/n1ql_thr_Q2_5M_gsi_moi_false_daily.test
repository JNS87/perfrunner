[test_case]
test = perfdaily.master.n1ql.N1QLThroughputTestDaily
title = Q2, Singleton Unique Lookup, 5M docs, 30KSops, GSI, MOI, stale=false
summary = Singleton Unique Lookup, 30KSops
larger_is_better = true

[cluster]
mem_quota = 20480
index_mem_quota = 10000
initial_nodes = 6
num_buckets = 1

[load]
items = 5000000
size = 1024
workers = 40
doc_gen = reverse_lookup
doc_partitions = 1

[n1ql]
indexes =
    by_email::CREATE INDEX {name} ON `{bucket}` (email) using gsi;

[secondary]
indexer.settings.storage_mode = memory_optimized

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 5000000
workers = 20
time = 600
n1ql_queries = singleton-unique-lookup
n1ql_throughput = 1000000
n1ql_workers = 720

[n1ql-singleton-unique-lookup]
prepared = singleton_unique_lookup
statement = SELECT * FROM `bucket-1` WHERE email = $1;
scan_consistency = request_plus
args = ["{email}"]

[dailyp]
dailyp_category = n1ql
dailyp_subcategory = MOI
threshold = 20