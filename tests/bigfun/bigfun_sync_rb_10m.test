[test_case]
test = perfrunner.tests.cbas.CBASBigfunDataSyncRebalanceTest
title = sync latency for BigFun large dataset (10M users + 50M messages + 100M chirp messages) with data node rebalance in
component = cbas
category = latency

[cluster]
mem_quota = 40960
analytics_mem_quota = 40960
analytics_iodevices=/data/iodev0,/data/iodev1,/data/iodev2,/data/iodev3,/data/iodev4,/data/iodev5,/data/iodev6,/data/iodev7
initial_nodes = 3
num_buckets = 1

[cbas_settings]
node.logLevel=WARNING

[bigfun]
workers=40
user_docs=10000000

[rebalance]
nodes_after = 4

