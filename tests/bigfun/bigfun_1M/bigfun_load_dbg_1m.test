[test_case]
test = perfrunner.tests.cbas.CBASBigfunTest
title = Load 1M dataset bigfun data into Couchbase for CBAS investigation
component = analytics
sub_category = BigFun 1M
category = Sync

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 2
num_buckets = 1
analytics_iodevices=/data/@analytics/iodev0,/data/@analytics/iodev1,/data/@analytics/iodev2,/data/@analytics/iodev3

[cbas_settings]
node_jvmArgs=-Dcom.sun.management.jmxremote -Dcom.sun.management.jmxremote.port=9010 -Dcom.sun.management.jmxremote.local.only=false -Dcom.sun.management.jmxremote.authenticate=false -Dcom.sun.management.jmxremote.ssl=false -Xverify:none

[bigfun]
workers=20
user_docs=1000000

[access]
time = 60
