[test_case]
test = perfrunner.tests.cbas.CBASBigfunCleanupBucketTest

[showfast]
title = Delete disconnected bucket (BigFun 1M dataset)
component = analytics
sub_category = BigFun 1M
category = Sync

[cluster]
mem_quota = 20480
analytics_mem_quota = 20480
initial_nodes = 2
num_buckets = 1
analytics_iodevices=/data/@analytics/iodev0,/data/@analytics/iodev1,/data/@analytics/iodev2,/data/@analytics/iodev3

[bigfun]
workers=20
user_docs=1000000
cleanup_when_disconnected=true
cleanup_method=delete
