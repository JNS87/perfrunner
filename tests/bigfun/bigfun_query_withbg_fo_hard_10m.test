[test_case]
test = perfrunner.tests.cbas.CBASBigfunQueryWithBGRecoveryTest
title = Average query latency for BigFun large dataset (10M users + 50M messages + 100M chirp messages) - CBAS test 3 parallel queries with data node failover and recover
component = cbas
category = latency

[cluster]
mem_quota = 51200
analytics_mem_quota = 51200
initial_nodes = 4
num_buckets = 1

[cbas_settings]
node.logLevel=WARNING

[bigfun]
workers=40
user_docs=10000000

[access]
workers=20
bigfun_query_workers=3
items=10000000
time=300

[rebalance]
failed_nodes = 1
failover = hard
delay_before_failover = 60
start_after = 60
stop_after = 60
