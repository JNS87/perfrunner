[test_case]
test = perfrunner.tests.cbas.CBASBigfunQueryWithBGRebalanceCBASTest
title = Average query latency for BigFun large dataset (10M users + 50M messages + 100M chirp messages) - CBAS test 3 parallel queries with cbas node rebalance in
component = cbas
category = latency

[cluster]
mem_quota = 51200
analytics_mem_quota = 51200
initial_nodes = 3
num_buckets = 1

[cbas_settings]
node.logLevel=WARNING

[bigfun]
workers=40
user_docs=10000000

[access]
workers=20
bigfun_query_workers=3
items=10000000
time=300

[rebalance]
nodes_after = 4
