[test_case]
test = perfrunner.tests.cbas.CBASBigfunQueryWithBGRebalanceCBASTest

[showfast]
title = Query with background traffic (BigFun 10K dataset) (3 parallel queries) (cbas node rebalance in)
component = analytics
sub_category = BigFun 10K
category = QueryBgREB

[cluster]
mem_quota = 4096
analytics_mem_quota = 4096
initial_nodes = 2
num_buckets = 1

[bigfun]
workers=20
user_docs=5000

[access]
workers=20
bigfun_query_workers=3
items=5000
time=300

[rebalance]
nodes_after = 3
start_after = 60
stop_after = 60
