[test_case]
test = perfrunner.tests.cbas.CBASBigfunQueryWithBGRecoveryTest
title = Query with background traffic (BigFun 10M dataset) (3 parallel queries) (data node failover and recover)
component = analytics
sub_category = BigFun 10M
category = QueryBgRecovery

[cluster]
mem_quota = 40960
analytics_mem_quota = 40960
analytics_iodevices=/data/@analytics/iodev0,/data/@analytics/iodev1,/data/@analytics/iodev2,/data/@analytics/iodev3,/data/@analytics/iodev4,/data/@analytics/iodev5,/data/@analytics/iodev6,/data/@analytics/iodev7
initial_nodes = 4
num_buckets = 1

[cbas_settings]
cbas_lag_timeout=600

[bigfun]
workers=40
user_docs=10000000

[access]
workers=40
bigfun_query_workers=3
items=10000000
time=3600

[rebalance]
failed_nodes = 1
failover = graceful
delay_before_failover = 60
start_after = 300
stop_after = 60
