[test_case]
test = perfrunner.tests.cbas.CBASBigfunQueryWithBGRebalanceCBASTest

[showfast]
title = Query with background traffic (BigFun 10M dataset) (3 parallel queries) (cbas node rebalance in)
component = analytics
sub_category = BigFun 10M
category = QueryBgREB

[cluster]
mem_quota = 40960
analytics_mem_quota = 40960
analytics_iodevices=/data/@analytics/iodev0,/data/@analytics/iodev1,/data/@analytics/iodev2,/data/@analytics/iodev3,/data/@analytics/iodev4,/data/@analytics/iodev5,/data/@analytics/iodev6,/data/@analytics/iodev7
initial_nodes = 3
num_buckets = 1

[cbas_settings]
cbas_lag_timeout=3600

[bigfun]
workers=40
user_docs=10000000

[access]
workers=40
bigfun_query_workers=3
items=10000000
time=3600

[rebalance]
nodes_after = 4
start_after = 60
stop_after = 60
