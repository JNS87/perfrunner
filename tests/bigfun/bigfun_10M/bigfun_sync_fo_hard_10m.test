[test_case]
test = perfrunner.tests.cbas.CBASBigfunDataSyncRecoveryTest

[showfast]
title = Sync data (BigFun 10M dataset) (data node hard failover and recover)
component = analytics
sub_category = BigFun 10M
category = SyncRecovery

[cluster]
mem_quota = 40960
analytics_mem_quota = 40960
analytics_iodevices=/data/@analytics/iodev0,/data/@analytics/iodev1,/data/@analytics/iodev2,/data/@analytics/iodev3,/data/@analytics/iodev4,/data/@analytics/iodev5,/data/@analytics/iodev6,/data/@analytics/iodev7
initial_nodes = 4
num_buckets = 1

[bigfun]
workers=40
user_docs=10000000

[rebalance]
failed_nodes = 1
failover = hard
delay_before_failover = 60
start_after = 300
stop_after = 60

