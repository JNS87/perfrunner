[test_case]
test = perfrunner.tests.analytics.BigFunRebalanceTest
use_workers = 0

[showfast]
component = analytics
category = rebalance
sub_category = BigFUN 10M
title = Rebalance-out (min), 2 -> 1 nodes, BigFUN 10M users (160M docs), 8 IO devices, 3 indexes

[cluster]
mem_quota = 51200
analytics_mem_quota = 51200
initial_nodes = 4
num_buckets = 1
analytics_io_devices =
    /data/@analytics/iodev0
    /data/@analytics/iodev1
    /data/@analytics/iodev2
    /data/@analytics/iodev3
    /data/@analytics/iodev4
    /data/@analytics/iodev5
    /data/@analytics/iodev6
    /data/@analytics/iodev7

[bucket]
replica_number = 0
eviction_policy = fullEviction

[restore]
backup_storage = /backups
backup_repo = bigfun10M

[rebalance]
nodes_after = 3
start_after = 0
stop_after = 0
