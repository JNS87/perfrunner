[test_case]
test = perfrunner.tests.syncgateway.SGMixQueryLatency
title = 1 node, 1M users, 10K channel, 50 channels per user, 60/40 R/W, access and channels queries
component = syncgateway
category = querymix

[cluster]
mem_quota = 25000
index_mem_quota = 25000
initial_nodes = 4
num_buckets = 1

[access]
time = 240
workers = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[syncgateway]
nodes = 1
threads = 1
clients = 1
instances_per_client = 1
workload_path = workloads/syncgateway_blank
ycsb_repo = git://github.com/couchbaselabs/YCSB.git
ycsb_branch = syncgateway-weekly
users = 100000
channels = 100000
channels_per_user = 20
channels_per_doc = 1
documents = 1000000
roundtrip_write = true
read_mode = allchanges
feed_reading_mode = withdocs
feed_mode = longpoll
insert_mode = byuser
auth = true
readproportion=0.6
updateproportion=0
insertproportion=0.4
scanproportion=0.2
requestdistribution = zipfian
log_title = sync_gateway_1node_sync
