[test_case]
test = perfrunner.tests.ycsb.YCSBSOETest
reset_workers = 1

[showfast]
title = Avg Throughput (queries/sec), Workload SH, 1 node
component = n1ql
category = soe

[cluster]
mem_quota = 24000
index_mem_quota = 24000
initial_nodes = 1
num_buckets = 1

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
workload_path = workloads/soe/workloadsh
items = 2500000
recorded_load_cache_size = 25000
workers = 100
inserts_per_workerinstance = 10000000

[n1ql]
indexes =
    ix2::CREATE INDEX {name} ON `bucket-1`(address.country, age_group, DATE_PART_STR(dob,'year'));

[access]
workload_path = workloads/soe/workloadsh
items = 2500000
recorded_load_cache_size = 25000
ops = 500000000
time = 600
workers = 100
workload_instances = 1
inserts_per_workerinstance = 10000000

[ycsb]
branch = soe

[restore]
backup_storage = /backups
backup_repo = soe2.5M

