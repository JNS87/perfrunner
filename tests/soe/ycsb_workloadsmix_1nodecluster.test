[test_case]
test = perfrunner.tests.ycsb.YCSBSOETest
reset_workers = 1

[showfast]
title = Avg Throughput (queries/sec), Workload SMIX, 1 node
component = n1ql
category = soe

[cluster]
mem_quota = 24000
index_mem_quota = 24000
initial_nodes = 1
num_buckets = 1

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = memory_optimized

[load]
workload_path = workloads/soe/workloadsmix
items = 2500000
recorded_load_cache_size = 25000
workers = 100
inserts_per_workerinstance = 10000000

[n1ql]
indexes =
    primary_idx::CREATE PRIMARY INDEX {name} ON `bucket-1`
    ix1::CREATE INDEX {name} ON `bucket-1`(address.zip) WITH {{ "nodes": [ "{index_node}:8091" ] }};
    ix2::CREATE INDEX {name} ON `bucket-1`(address.country, age_group, DATE_PART_STR(dob,'year')) WITH {{ "nodes": [ "{index_node}:8091" ] }};
    ix3::CREATE INDEX {name} ON `bucket-1`(address.prev_address.zip) WITH {{ "nodes": [ "{index_node}:8091" ] }};
    ix4::CREATE INDEX {name} ON `bucket-1`(DISTINCT devices) WITH {{ "nodes": [ "{index_node}:8091" ] }};
    ix5::CREATE INDEX {name} ON `bucket-1`(DISTINCT ARRAY (DISTINCT ARRAY (v.country || "." || c) FOR c IN v.cities END) FOR v IN visited_places END) WITH {{ "nodes": [ "{index_node}:8091" ] }};
    ix6::CREATE INDEX {name} ON `bucket-1`(address.zip, order_list) WITH {{ "nodes": [ "{index_node}:8091" ] }};
    ix7::CREATE INDEX {name} ON `bucket-1`(address.zip, month, order_list, sale_price) WITH {{ "nodes": [ "{index_node}:8091" ] }};

[access]
workload_path = workloads/soe/workloadsmix
items = 2500000
recorded_load_cache_size = 25000
ops = 500000000
time = 600
workers = 100
workload_instances = 1
inserts_per_workerinstance = 10000000

[ycsb]
branch = soe

[restore]
backup_storage = /backups
backup_repo = soe2.5M

